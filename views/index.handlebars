<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1><strong>{{msg}}</strong></h1><br>
        <br><h2 style="color: whitesmoke">Enter A New Device</h2>
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="device-text">Device Name</label>
            <input type="text" id="device-name" class="form-control" aria-describedby="device-name" placeholder="Enter Device Name">
          </div>
          <div class="form-group">
            <label for="device-description">Device Description</label>
            <textarea class="form-control" id="device-description" aria-describedby="device-description" placeholder="Enter Device Description"></textarea>
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
        <h3 style="color: whitesmoke">Devices:</h3>
        <ul id="device-list" class="list-group">
          {{#each devices}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="device/{{this.id}}">{{this.name}}</a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>
