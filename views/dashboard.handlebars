<div class="container">
  <div class="jumbotron text-center">
      <h1><i class="fas fa-user-shield fa-3x"></i>  {{msg}}</h1>
  </div>
  <div class="row">
    <div class="col-md-6">      
      <button type="button" class="btn btn-primary btn-lg btn-block">Add a device!</button>
      <br>
      <form class="clearfix mb-4">
        <div class="form-group">
          <label for="device-text">Device Name</label>
          <input type="text" id="device-name" class="form-control" aria-describedby="device-name" placeholder="Enter Device Name">
        </div>
        <div class="form-group">
          <label for="device-description">Device Description</label>
          <textarea class="form-control" id="device-description" aria-describedby="device-description" placeholder="Enter Device Description"></textarea>
        </div>
        <button id="deviceSubmit" class="btn btn-primary float-left">Submit</button>
      </form>
    </div>
    <div class="col-md-6">
      <div id="show-devices" class="btn btn-primary btn-lg btn-block"> Device List </div>
      <ul id="device-list" class="list-group">
        {{#each devices}}
        <li data-id="{{this.id}}" class="list-group-item">
          <a href="device/{{this.id}}">{{this.name}}</a>
          <button class="btn btn-danger float-right delete">ï½˜</button>
        </li>
        {{/each}}
      </ul>
    </div>
  </div>
</div>
