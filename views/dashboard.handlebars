      <button type="button" id="show-devices" class="btn btn-primary btn-lg btn-block"> Show Active Devices </button>
      <ul id="device-list" class="list-group">
        {{#each devices}}
        <li data-id="{{this.id}}" class="list-group-item">
          <a href="device/{{this.id}}">{{this.name}}</a>
          <button class="btn btn-danger float-right delete">ï½˜</button>
