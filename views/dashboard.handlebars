<div class="container">
  <div class="jumbotron text-center">
      <h1><i class="fas fa-user-shield fa-3x"></i>  {{msg}}</h1>
  </div>
  <div class="row">
    <div class="col-md-6">
      <button type="button" id="show-devices" class="btn btn-primary btn-lg btn-block"> Show Active Devices </button>
      <ul id="device-list" class="list-group">
        {{#each devices}}
        <li data-id="{{this.id}}" class="list-group-item">
          <a href="device/{{this.id}}">{{this.device}}</a>
          <button class="btn btn-danger float-right delete">ï½˜</button>
        </li>
        {{/each}}
      </ul>
    </div>
    <div class="col-md-6">
      <button type="button" class="btn btn-primary btn-lg btn-block">Add a device!</button>
      <br>
      <form class="clearfix mb-4" action="POST">
        <div class="form-group">
          <label for="device-text">Device Name</label>
          <input
            type="text"
            id="device-text" 
            class="form-control" 
            placeholder="Enter Device Name">
        </div>
        <div class="form-group">
          <label for="device-description">Device Status</label>
          <input 
            type="text" 
            id="device-description" 
            class="form-control" 
            placeholder="True or false ">
        </div>
        <button id="deviceSubmit" class="btn btn-primary float-left">Submit</button>
      </form>
    </div>
  </div>
</div>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/device.js"></script>